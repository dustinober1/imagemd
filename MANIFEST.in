# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CLAUDE.md

# Include configuration files
include pyproject.toml
include vision_pdf/config/*.yaml
include vision_pdf/config/*.yml

# Include API static files and templates (if they exist)
recursive-include vision_pdf/api/static *
recursive-include vision_pdf/api/templates *

# Include documentation source
recursive-include docs/source *
recursive-include docs/tutorials *

# Include test fixtures
recursive-include tests/fixtures *

# Exclude compiled files and cache
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .coverage
global-exclude .pytest_cache

# Exclude development and build artifacts
exclude .gitignore
exclude .flake8
exclude .mypy.ini
exclude pytest.ini
exclude .pre-commit-config.yaml
global-exclude *.egg-info
global-exclude build
global-exclude dist